<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@transition/list_exit</item>
        <item name="android:windowReenterTransition">@transition/list_reenter</item>
    </style>

    <style name="Theme.Bacon.Detail" parent="Theme.Bacon">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/article_detail_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/article_detail_return_transition</item>
    </style>
</resources>