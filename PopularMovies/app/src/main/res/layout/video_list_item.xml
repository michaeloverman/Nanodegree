<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:background="@drawable/video_link_touch_selector">

    <ImageButton
        android:id="@+id/video_link_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginTop="@dimen/video_link_play_button_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/video_link_play_button_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/video_link_play_button_margin"
        android:background="@color/colorPrimary"/>
    <TextView
        android:id="@+id/video_link_title"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Movie title"
        app:layout_constraintLeft_toRightOf="@+id/video_link_play_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/video_link_play_button"
        app:layout_constraintBottom_toBottomOf="@+id/video_link_play_button"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"/>
    <ImageView
        android:id="@+id/divider"
        android:background="@color/colorPrimaryLight"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/video_link_play_button_margin"
        app:layout_constraintTop_toBottomOf="@+id/video_link_play_button"
        android:layout_marginLeft="@dimen/video_list_divider_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/video_list_divider_padding"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>